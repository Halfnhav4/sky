[Extern("eql_table")]
/**
 * A table represents a collection of paths.
 */
class Table
{
    //--------------------------------------------------------------------------
    // Properties
    //--------------------------------------------------------------------------

    /**
     * A pointer to the underlying Sky table.
     */
    private Ref table;


    //--------------------------------------------------------------------------
    // Methods
    //--------------------------------------------------------------------------

    [Extern("eql_table_paths")]
    /**
     * Retrieves a path iterator used to loop over the paths in the table.
     */
    public void paths(PathIterator *iterator);
    
    /**
     * Calculates the number of paths in the table.
     */
    public Int getPathCount()
    {
        Int count = 0;
        foreach(Path path in paths) {
            count++;
        }
        return count;
    }
}